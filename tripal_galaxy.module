/**
 * Implements hook_[form_id]_alter().
 *
 * Add a submit handler to the client webform form.
 */
function tripal_galaxy_form_webform_client_form_alter(&$form, &$form_state, $form_id ) {
  // Check if this particular webform really is a galaxy webform
  // At each 'turn of the page' of the particular webform this is being called
  if($form['#node']->webform['components'][1]['form_key'] == 'galaxy_webform'){
    $form['#submit'][] = 'tripal_galaxy_webform_client_form_submit';
  }
}

/**
 * Implements submit function for the webform_client_form
 */
function tripal_galaxy_webform_client_form_submit($form, &$form_state) {

  // Don't do anything if the webform isn't finished being filled out.
  if ($form_state['webform_completed'] != TRUE) {
    return;
  }
  try {
    // Get the Galaxy server workflow ID from the form then
    // lookup our internal galaxy workflow ID.
    $workflow_id = $form['#node']->webform['components'][1]['extra']['wfid'];
    $workflow = db_select('tripal_galaxy_workflow', 'tgw')
      ->fields('tgw')
      ->condition('workflow_id', $workflow_id)
      ->execute()
      ->fetchObject();
    // To be implemented more properly once inputs are generated
    $data = array(
      'sid' => $form_state['storage']['details']['sid'],
      'galaxy_workflow_id' => $workflow->galaxy_workflow_id,
      'errors' => '',
      'submit_date' => REQUEST_TIME,
      'status' => 'Waiting',
    );

    // Now insert the submission into the database
    drupal_write_record('tripal_galaxy_workflow_submission', $data);
  }
  catch (Exception $e) {
    drupal_set_message(t('Could not copmlete workflow submission.  Please contact the web site to report this issue.'), 'error');
    watchdog_exception('tripal_galaxy', $e);
  }
  drupal_set_message(t('Your job is successfully submitted to the job queue! You will be notified by email when your job begins and completes.'));
  drupal_goto('/');
}

/**
 * This function listens for the webform to be completed JIT style!
 *
 * When the completed field of the $form_state is set to true this function
 * gather all of the inputs at once and acquire the id's needed to invoke the
 * workflow on the galaxy side
 *
 * @param $form
 * @param $form_state
 */
function tripal_galaxy_workflow_invoke($form, &$form_state){




  // The array to pass to the workflow invoke with the proper elements

  $galaxy_inputs = array(
    'parameters' => array(),
    'workflow_id' => $workflow_id,
    'input_dataset_ids' => array(),
  );

  $galaxy_workflow = db_select('tripal_galaxy_workflow', 'tgw')
    ->fields('tgw')
    ->condition('workflow_id', $workflow_id)
    ->execute()
    ->fetchObject();

  $galaxy_server = db_select('tripal_galaxy', 'tg')
    ->fields('tg')
    ->condition('galaxy_id', $galaxy_workflow->galaxy_id)
    ->execute()
    ->fetchObject();

  // Grab the submitted data from the form_state.  The result will be an
  // associative array with the keys being the cid's (component id's)
  // of the webform and the value being the option/value selected
  $inputs = $form_state['values']['submitted'];

  // There will be cid's with no values so get rid of them (these are usually
  // components that either did not need a value or were hidden
  // due to conditionals)
  foreach($inputs as $cid => $value){
    if (empty($value)) {
      unset($inputs[$cid]);
    }
  }

  // Some components will belong to the same tool, So group these param_names
  // into the same step_id key
  foreach($inputs as $cid => $value){

    // Grab the component from the webform.
    $component = $form_state['build_info']['args'][0]->webform['components'][$cid];

    // Skip components that don't have an 'input_name' field as these
    // don't correspond to workflow input components.
    if (!array_key_exists('input_name', $component['extra'])) {
      continue;
    }

    // Input elements of type 'fixed_value' should not be provided as
    // input for the Galaxy workflow because the defaulst should be used
    if ($component['type'] == 'fixed_value') {
      continue;
    }

    // Deal with the BDSS_file type.
    // TODO: should this happen here, or should the URL already be
    // set in the form submit values?  We should explore that...
    if ($component['type'] == 'BDSS_file') {

      $file_URL =  $value['file_URL'];
      $fid = $value['file_upload'];

      if ($file_URL) {
        $value = $file_URL;
      }
      else if ($fid) {
        $file = file_load($fid);
        $value = file_create_url($file->uri);
      }
      else {
        $value = '';
      }
    }

    // If we don't have a value then skip it and let the workflow use it's
    // own defaults
    if (!$value) {
      continue;
    }

    // NOTE: The step id's (page_num) on the server side are offset by 1
    // so subtract 1, then organize the input settings by their step in the
    // $galaxy_input['parameters'] array.
    $step_index = $component['page_num'] - 1;
    $input_name = $component['extra']['input_name'];
    $galaxy_inputs['parameters'][$step_index][$input_name] = $value;
  }

//   // Launch the workflow on the remote galaxy instance.
//   $host = $galaxy_server->servername;
//   list($url, $port) = explode(':', $galaxy_server->url);
//   $https = FALSE;
//   if (preg_match('/^https/', $url)) {
//     $https = TRUE;
