    $galaxy = tripal_galaxy_get_connection($galaxy_id);
    $dataset_id = $dataset['id'];

    $url = $galaxy->getURL() . $dataset['download_url'];
    $headers = get_headers($url);
    foreach ($headers as $header) {
      $results = preg_split('/:/', $header, 2);
